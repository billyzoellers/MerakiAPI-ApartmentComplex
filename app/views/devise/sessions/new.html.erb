<div class="container">
  <div class="offset-lg-3 col-lg-6">
    <div class="card">
      <h2 class="card-header mb-3">Sign in</h2>
      <div class="card-block">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group row justify-content-center">
            <%= f.label :email, class: "col-3 col-form-label d-none d-md-block" %>
            <div class="col-11 col-md-8">
              <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Email" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.label :password, class: "col-3 col-form-label d-none d-md-block" %>
            <div class="col-11 col-md-8">
             <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Password" %>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form-group row justify-content-center">
              <%= f.label :remember_me, "Remember", class: "col-3 d-none d-md-block" %>
              <div class="col-11 col-sm-8">
                <div class="form-check">
                  <label class="form-check-label">
                   <%= f.check_box :remember_me %> <span class="d-inline d-md-none">Remember me</span>
                  </label>
                </div>
              </div>
            </div>
          <% end -%>
          <div class="form-group row">
            <div class="offset-1 col-10">
              <div class="actions">
                <%= f.button :submit, :class => "btn btn-success btn-lg" do %>
                Sign in &nbsp; <%= icon('fas', 'sign-in-alt') %>
                <% end %>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>